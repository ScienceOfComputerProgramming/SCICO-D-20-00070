#!/usr/bin/env python3
# -*- coding: utf-8 -*-

from git import Repo
from sciit import IssueRepo
from sciit.cli.functions import do_repository_is_init_check, do_commit_contains_duplicate_issue_filepaths_check,\
    print_status_summary

import colorama
colorama.init()


git_repository = Repo(search_parent_directories=True)
issue_repository = IssueRepo(git_repository)
issue_repository.cli = True

do_repository_is_init_check(issue_repository)

commit = issue_repository.git_repository.head.commit
do_commit_contains_duplicate_issue_filepaths_check(issue_repository, commit)

issue_repository.cache_issue_snapshots_from_unprocessed_commits()
print_status_summary(issue_repository)
